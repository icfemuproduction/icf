<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.application.iricf">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="Login"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".HomeActivity"
            android:label="Home" />
        <activity
            android:name=".RakesEditActivity"
            android:label="Edit Rakes"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".CoachesEdit"
            android:label="Edit Coaches"
            android:parentActivityName=".RakesEditActivity" />
        <activity
            android:name=".AddCoachActivity"
            android:label="Add Coach" />
        <activity
            android:name=".EditStatusActivity"
            android:label="Edit Status" />
        <activity
            android:name=".CreateUserActivity"
            android:label="Create User"
            android:parentActivityName=".HomeActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".LinePositionActivity"
            android:label="Line Position"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".ProductionLineActivity"
            android:label="Production Line"
            android:parentActivityName=".LinePositionActivity" />
        <activity
            android:name=".DispatchActivity"
            android:label="Dispatch Shed"
            android:parentActivityName=".LinePositionActivity" />
        <activity
            android:name=".CommissionActivity"
            android:label="Commission Shed"
            android:parentActivityName=".LinePositionActivity" />
        <activity
            android:name=".OutShedActivity"
            android:label="Out Shed"
            android:parentActivityName=".LinePositionActivity" />
        <activity
            android:name=".PaintActivity"
            android:label="Paint Shop"
            android:parentActivityName=".LinePositionActivity" />
        <activity
            android:name=".ShellActivity"
            android:label="Shells Received"
            android:parentActivityName=".LinePositionActivity" />
        <activity
            android:name=".CoachStatusActivity"
            android:label="Coach Status"
            android:parentActivityName=".HomeActivity" />
        <activity android:name=".AllUsersActivity"
            android:label="All Users"
            android:parentActivityName=".HomeActivity"/>
    </application>

</manifest>