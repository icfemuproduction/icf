<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.application.iricf.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:src="@drawable/icf"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/transbg">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/coach_status_button"
                android:textSize="20sp"
                android:textColor="@color/buttonTextColor"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:background="@android:color/transparent"
                android:layout_centerInParent="true"
                android:text="Coach Status"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/centre"
            android:background="@drawable/transbg">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/line_position_button"
                android:textSize="20sp"
                android:textColor="@color/buttonTextColor"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:text="Line Position" />

        </RelativeLayout>

    </LinearLayout>




</RelativeLayout>
